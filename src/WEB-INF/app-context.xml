<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- partner manager class -->
    <bean id="partnerManager" class="edu.luc.comp433.domain.partner.ConcretePartnerManager" scope="prototype">
        <property name="database" ref="dao" />
    </bean>

    <!-- partner class -->
    <bean id="partner" class="edu.luc.comp433.domain.partner.ConcretePartnerProfile" scope="prototype"></bean>
    
    <!-- database access object class -->
    <bean id="dao" class="edu.luc.comp433.dao.ConcreteDatabaseAccess" ></bean>

    <!-- order manager class -->
    <bean id="orderManager" class="edu.luc.comp433.domain.order.ConcreteOrderManager" scope="prototype"></bean>

    <!-- order class -->
    <bean id="order" class="edu.luc.comp433.domain.order.ConcreteOrder" scope="prototype"></bean>

    <!-- order detail class -->
    <bean id="orderDetail" class="edu.luc.comp433.domain.order.ConcreteOrderDetail" scope="prototype">
        <property name="database" ref="dao" />
    </bean>

    <!-- product manager class -->
    <bean id="productManager" class="edu.luc.comp433.domain.product.ConcreteProductManager" scope="prototype">
        <property name="database" ref="dao" />
    </bean>
    
    <!-- product class -->
    <bean id="product" class="edu.luc.comp433.domain.product.ConcreteProduct" scope="prototype"></bean>
    
    <!-- domain facade class -->
    <bean id="domain" class="edu.luc.comp433.service.ConcreteDomainFacade" scope="singleton"></bean>

    <!-- consumer manager class -->
    <bean id="consumerManager" class="edu.luc.comp433.domain.consumer.ConcreteConsumerManager" scope="prototype">
        <property name="database" ref="dao" />
    </bean>
    
    <!-- consumer class -->
    <bean id="consumer" class="edu.luc.comp433.domain.consumer.ConcreteConsumer" scope="prototype"></bean>

    <!-- payment class -->
    <bean id="payment" class="edu.luc.comp433.domain.consumer.ConcretePayment" scope="prototype" />

</beans>